<div id="bid_entry" class="panel panel-default entry-right">
  <div class="panel-body">
    <%= form_for "order_bid", url: new_order_bid_path(market["attributes"]["id"]), html: {class:"new_order_bid", id:"new_order_bid"} do |f| %>
      <%= f.hidden_field :ord_type, value: "limit" %>
      <div class="input-group price">
        <label class="input-group-addon"><%= t('.price') %></label>
        <span class="label label-danger hint-price-disadvantage"></span>
        <%= f.text_field :price, class: 'form-control' %>
        <span class="input-group-addon"><%= t(market["attributes"]["bid"]['currency'], scope: 'market.currency') %></span>
      </div>
      <div class="input-group amount">
        <label class="input-group-addon"><%= t('.amount') %></label>
        <span class="label label-info hint-positions"></span>
        <%= f.text_field :origin_volume, class: 'form-control' %>
        <span class="input-group-addon"><%= t(market["attributes"]["ask"]['currency'], scope: 'market.currency') %></span>
      </div>
      <div class="input-group total">
        <label class="input-group-addon"><%= t('.total') %></label>
        <%= f.text_field :total, class: 'form-control' %>
        <span class="input-group-addon"><%= t(market["attributes"]["bid"]['currency'], scope: 'market.currency') %></span>
      </div>
      <%= render partial: 'balance', locals: {currency: t(market["attributes"]["ask"]['currency'], scope: 'market.currency')} %>

      <button class="btn btn-danger btn-block text-up" type="submit">
        <%= t('.action', currency: t(market["attributes"]["ask"]['currency'], scope: 'market.currency')) %>
      </button>
    <% end %>
  </div>
  <%= render partial: 'mask' %>
</div>
